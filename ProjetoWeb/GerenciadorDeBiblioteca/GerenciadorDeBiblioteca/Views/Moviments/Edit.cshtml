@model GerenciadorDeBiblioteca.Models.Moviment

@{
    TempData["Title"] = "Edit";
}

<h1>Editar Movimentação</h1>

<h4>Empréstimo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdPerson" class="control-label"></label>
                <select asp-for="IdPerson" class="form-control" id="IdPerson">
                    @foreach (var item in ViewBag.People)
                    {
                        <option value=@item.Id>@item.Name</option> 
                    }
                </select>
                <span asp-validation-for="IdPerson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdResponsible" class="control-label"></label>
                <select asp-for="IdResponsible" class="form-control" id="IdResponsible">
                    @foreach (var item in ViewBag.People)
                    {
                        <option value=@item.Id>@item.Name</option> 
                    }
                </select>
                <span asp-validation-for="IdResponsible" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdBook" class="control-label"></label>
                <select asp-for="IdBook" class="form-control" id="IdBook">
                    @foreach (var item in ViewBag.Books)
                    {
                        <option value=@item.Id>@item.Title</option> 
                    }
                </select>
                <span asp-validation-for="IdBook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateMoviment" class="control-label"></label>
                <input asp-for="DateMoviment" class="form-control" />
                <span asp-validation-for="DateMoviment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateDeadline" class="control-label"></label>
                <input asp-for="DateDeadline" class="form-control" />
                <span asp-validation-for="DateDeadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar a lista de Movimentação</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
