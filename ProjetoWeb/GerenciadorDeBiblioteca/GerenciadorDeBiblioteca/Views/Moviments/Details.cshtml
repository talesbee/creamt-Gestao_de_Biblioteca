@model GerenciadorDeBiblioteca.Models.MovimentView

@{
    TempData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Moviment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PersonName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ResponsibleName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataMoviment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateDeadline)
        </dd>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Books)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.Books) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookName)
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </dl>
</div>












<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Voltar para a Lista</a>
</div>
