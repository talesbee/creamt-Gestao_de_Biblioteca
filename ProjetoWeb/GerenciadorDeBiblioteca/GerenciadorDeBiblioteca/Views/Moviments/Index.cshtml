@model IEnumerable<GerenciadorDeBiblioteca.Models.MovimentView>

@{
    TempData["Title"] = "Index";
}

<h1>Movimentações</h1>

<p>
    <a asp-action="Create">Cadastrar uma nova Movimentação</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResponsibleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataMoviment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateDeadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PersonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResponsibleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataMoviment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateDeadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
